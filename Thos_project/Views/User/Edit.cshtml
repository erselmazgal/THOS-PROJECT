@model Thos_project.Models.User

<h2>Kullanıcı Düzenle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Name, "Ad")
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Surname, "Soyad")
        @Html.TextBoxFor(model => model.Surname, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserName, "Kullanıcı Adı")
        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HashPassword, "Yeni Şifre")
        @Html.PasswordFor(model => model.HashPassword, new { @class = "form-control" })
        <small class="form-text text-muted">Eğer şifreyi değiştirmek istemiyorsanız bu alanı boş bırakın.</small>
    </div>

    <input type="submit" value="Güncelle" class="btn btn-primary" />
}

@Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-secondary" })