@model Thos_project.Models.ProductProperty

<h2>Ürün Özelliğini Düzenle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.ProductId, "Ürün")
        @Html.DropDownList("ProductId", (SelectList)ViewBag.Products, "Ürün Seçin", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PropertyId, "Özellik")
        @Html.DropDownList("PropertyId", (SelectList)ViewBag.Properties, "Özellik Seçin", new { @class = "form-control" })
    </div>

    <input type="submit" value="Güncelle" class="btn btn-primary" />
}

@Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-secondary" })