@model IEnumerable<Thos_project.Models.Product>

<h2>Ürün Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Resim</th> <!-- Resim sütunu eklendi -->
            <th>Aksiyonlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@Url.Content("~/UploadedImages/" + item.ImagePath)" alt="@item.ProductName" style="width:100px; height:auto;" />
                    }
                    else
                    {
                        <span>Resim yok</span> <!-- Resim yoksa alternatif metin -->
                    }
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.ProductId }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.ProductId })
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Yeni Ürün Ekle", "Create")
