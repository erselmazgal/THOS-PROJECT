@model Thos_project.Models.Product

<h2>Yeni Ürün Ekle</h2>

@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.ProductName)
        @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", type = "number", step = "0.01" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryId, "Kategori")
        @Html.DropDownList("CategoryId", (SelectList)ViewBag.Categories, "Kategori Seçin", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Resim Yükle")  <!-- Label, ImagePath için -->
        <input type="file" name="ImagePath" class="form-control" accept="image/*" />
    </div>

    <input type="submit" value="Kaydet" class="btn btn-primary" />
}

@Html.ActionLink("Geri Dön", "Index")
