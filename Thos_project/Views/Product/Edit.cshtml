@model Thos_project.Models.Product

<h2>Ürün Düzenle</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.ProductName)
        @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryId, "Kategori")
        @Html.DropDownList("CategoryId", (SelectList)ViewBag.Categories, "Kategori Seçin", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ImagePath, "Ürün Resmi")
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <div>
                <img src="@Url.Content("~/UploadedImages/" + Model.ImagePath)" alt="@Model.ProductName" style="width:100px; height:auto;" />
            </div>
        }
        <input type="file" name="ImageUpload" class="form-control" />
    </div>

    <input type="submit" value="Kaydet" class="btn btn-primary" />
}

@Html.ActionLink("Geri Dön", "Index")
