<body>

    <div class="login-container">
        <h2 class="text-center">Kullanıcı Girişi</h2>

        @using (Html.BeginForm("UserLogin", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <!-- Hata mesajlarını göster -->
            if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            }

            <div class="form-group">
                @Html.LabelFor(m => m.UserName, "Kullanıcı Adı")
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Kullanıcı adınızı girin" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" }) <!-- Hata mesajı -->
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Şifre")
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Şifrenizi girin" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" }) <!-- Hata mesajı -->
            </div>

            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
