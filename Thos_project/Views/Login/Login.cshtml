        }

        .login-container {
            border: 1px solid #ced4da; /* Kenar rengi */
            border-radius: 0.5rem; /* Kenar yuvarlama */
            padding: 2rem;
            background-color: rgba(255, 255, 255, 0.9); /* İçerik arka plan rengi (şeffaf beyaz) */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Gölgelendirme */
            width: 400px; /* Genişliği sabitle */
        }
