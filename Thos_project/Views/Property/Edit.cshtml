@model Thos_project.Models.Property

<h2>Özellik Düzenle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Key)
        @Html.TextBoxFor(model => model.Key, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Value)
        @Html.TextBoxFor(model => model.Value, new { @class = "form-control" })
    </div>

    <input type="submit" value="Güncelle" class="btn btn-primary" />
}

@Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-secondary" })