@model IEnumerable<Thos_project.Models.ProductWithCategoryViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kafe Menüsü</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('https://images.unsplash.com/photo-1493857671505-72967e2e2760?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8Y2FmZXxlbnwwfHwwfHx8MA%3D%3D'); /* Arka plan resmi URL'sini buraya ekleyin */
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-size: cover; /* Resmi kapsayıcı yap */
            background-position: center; /* Resmi ortala */
            background-repeat: no-repeat; /* Resmin tekrarını önle */
        }

        .menu-container {
            background-color: rgba(255, 255, 255, 0.8); /* İçerik arka plan rengi */
            border-radius: 0.5rem; /* Kenar yuvarlama */
            padding: 20px; /* İç boşluk */
            max-width: 800px; /* Maksimum genişlik */
            margin: auto; /* Ortala */
            margin-top: 50px; /* Üstten boşluk */
        }

        .product-card {
            background-color: #f8f9fa; /* Ürün kartı arka plan rengi */
            border: 1px solid #dee2e6; /* Ürün kartı kenar rengi */
            border-radius: 0.5rem; /* Kenar yuvarlama */
            padding: 15px; /* İç boşluk */
            margin-bottom: 15px; /* Alt boşluk */
            display: flex; /* Flex düzeni kullan */
            align-items: center; /* Dikey hizalama */
            justify-content: space-between; /* Elemanlar arasındaki boşluğu ayarla */
            transition: transform 0.2s; /* Hover animasyonu */
        }

            .product-card:hover {
                transform: scale(1.02); /* Hover durumunda büyütme */
            }

        .product-image {
            flex: 0 0 100px; /* Resim boyutu */
            margin-right: 10px; /* Sağ boşluk */
        }

        .product-name {
            font-weight: bold; /* Ürün adı kalın yazı */
            font-size: 1.5rem; /* Ürün adı boyutu */
            color: green; /* Ürün adı rengi */
        }

        .product-price {
            color: #28a745; /* Fiyat rengi */
            font-size: 1.2rem; /* Fiyat boyutu */
            text-align: right; /* Fiyatı sağa hizala */
        }

        .product-category {
            font-style: italic; /* Kategori italik yazı */
            color: #6c757d; /* Kategori rengi */
        }
    </style>
</head>
<body>
    <div class="menu-container">
        <h2 class="text-center my-4">Kafe Menüsü</h2>
        @foreach (var item in Model)
        {
            <div class="product-card">
                <div class="product-image">
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@Url.Content("~/UploadedImages/" + item.ImagePath)" alt="@item.ProductName" style="width:100%; height:auto;" />
                    }
                    else
                    {
                        <span>Resim yok</span> <!-- Resim yoksa alternatif metin -->
                    }
                </div>
                <div style="flex: 1;">
                    <div class="product-name">@item.ProductName</div>
                    <div class="product-category">@item.CategoryName</div>
                </div>
                <div class="product-price">₺@item.Price.ToString("N2")</div>
                <div class="product-price">Dolar: $@item.PriceInUSD.ToString("N2")</div>
                <div class="product-price">Euro: €@item.PriceInEUR.ToString("N2")</div>
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
